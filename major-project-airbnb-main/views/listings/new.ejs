<% layout("/layouts/boilerplate") %>
 <div class="row mt-3">
    <div class="col-8 offset-2">
            <h3>Create a New Listing</h3>
    <form 
    method="POST" 
    action="/listings" 
    novalidate 
    class="needs-validation" 
    enctype="multipart/form-data">
       <div class="mb-3">
         <label for="title" class="form-label">Title</label>
      <input 
      name="listing[title]" 
      placeholder="Add a catchy title" 
      type="text" class="form-control" 
      required
      />
      <div class="invalid-feedback">please enter tittle</div>
       </div>
     <div  class="mb-3">
         <label for="description" class="form-label">description</label>
         <textarea
        name="listing[description]"
        class="form-control"
        required
        ></textarea>
          <div class="invalid-feedback">please enter description</div>
     </div>
  
    <div  class="mb-3">
       <label for="image" class="form-label" 
       class="form-label">upload listing image</label>
      <input
       id="image"
        name="listing[image]"
        type="file"
        class="form-control"
        required
      />
  
   </div>

     <div class="row">
     <div class="mb-3 col-4">
  <label for="price" class="form-label">Price</label>
  <input name="listing[price]" placeholder="1200 " type="text" class="form-control" required />
  <div class="invalid-feedback">Please enter price</div>
</div>

  <div  class="mb-3 col-8">
     <label for="country" class="form-label">Country </label>
     <input name="listing[country]" placeholder="India" type="text" class="form-control" required />
       <div class="invalid-feedback">please enter country</div>
  </div>
     </div>
     <div  class="mb-3">
         <label for="location" class="form-label" class="form-label" >locatione</label>
         <input
        name="listing[location]"
        placeholder="jaipur, Rajashtan"
        type="text"
        class="form-control"
        required
      />
        <div class="invalid-feedback">please enter location</div>
     </div>
      <br>
      <button class="btn btn-dark add-btn mt-3">Add</button>
      <br><br>
    </form>
    </div>
 </div>